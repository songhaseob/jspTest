<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>jsp</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>basicServlet</servlet-name>
    <servlet-class>kr.or.ddit.servlet.basic.BasicServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>basicServlet</servlet-name>
    <url-pattern>/basicServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>TimesTablesServlet</display-name>
    <servlet-name>TimesTablesServlet</servlet-name>
    <servlet-class>kr.or.ddit.servlet.basic.TimesTablesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TimesTablesServlet</servlet-name>
    <url-pattern>/TimesTablesServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>s</display-name>
    <servlet-name>s</servlet-name>
    <servlet-class>kr.or.ddit.servlet.basic.session</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>s</servlet-name>
    <url-pattern>/s</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>Scope</display-name>
    <servlet-name>/Scope</servlet-name>
    <servlet-class>kr.or.ddit.servlet.scope.Scope</servlet-class>
  </servlet>
  
  
  
  <!-- error page 설정 -->
  
   <!-- 404 error -->
  <error-page>
  	<error-code>404</error-code>
  	<location>/error/404/404.jsp</location>
  </error-page>
  
   <!-- 500 error -->
   <error-page>
  	<error-code>500</error-code>
  	<location>/error/500/500.jsp</location>
   </error-page>
   
    <!-- error type -->
    <!-- class full name : 패키지명.클래스명 -->

  
   <error-page>
  	<exception-type>java.lang.ArithmeticException</exception-type>
  	<location>/error/type/ariError.jsp</location>
   </error-page>
   
   <error-page>
  	<exception-type>java.lang.runtimeException</exception-type>
  	<location>/error/type/runError.jsp</location>
  </error-page>
  
</web-app>
